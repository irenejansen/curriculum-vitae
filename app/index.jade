    // some dynamic stuff
    script.
      // collapsable containers
      $('.collapsable').each(function() {
        function toggle(el, btn) {
          content.toggle();
          btn
            .toggleClass("fa-angle-double-down")
            .toggleClass("fa-angle-double-up");
        }

        var el = $(this);
        var content = el.find('.collapsable-content');
        var trigger = el.find('.collapsable-trigger');
        var btn = $('<i class="fa fa-angle-double-up"/>');
        btn.css({ float: 'right' });

        // initial
        trigger.append(btn);
        if(el.data('collapsed')) { toggle(content, btn); }
        // on click
        trigger.on('click', function() { toggle(content, btn); });
      });
